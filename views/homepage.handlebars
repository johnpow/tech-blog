

<!-- Loop over each object in the projects array -->
{{#each blogposts as |blogpost| }}
<div class="row mb-4 project ">
  <div class="col-md-5">
    <h2>

     <a href="/blogposts/{{blogpost.id}}">{{blogpost.blog_title}}</a>
    </h2>

    <p>Created by {{blogpost.user.name}} on {{format_date blogpost.date_created}}</p>
    <p class="category">{{blogpost.blog_category}}</p>
  </div>
  <div class="col-md-7 box">
    <p>
      {{dotdotdot blogpost.blog_description}}<a href="/blogposts/{{blogpost.id}}"> (Read more)</a>
    </p>
  </div>
</div>
{{/each}}
